{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": true,
        "declarationMap": true,
        "lib": ["DOM", "es6"],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": {
            // avoid ../../../../foo type import paths
            "/@/*": ["./*"],
        },
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2021",
        "typeRoots": ["node_modules/@types", "src/metapage/types"],
    },
    "include": ["src/**/*.ts"]
}
